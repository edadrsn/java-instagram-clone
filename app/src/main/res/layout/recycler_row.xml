<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    android:background="#000000"
    android:orientation="vertical">


    <TextView
        android:id="@+id/recyclerViewUserTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="User email text"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="10dp"/>

    <ImageView
        android:id="@+id/recyclerViewImageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/rounded_img"
        android:scaleType="centerCrop"
        android:layout_gravity="center"/>
    
    <TextView
        android:id="@+id/recyclerViewCommentTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="User Comment"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_margin="15dp"/>


</LinearLayout>